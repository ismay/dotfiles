[user]
  name = ismay
  email = ismay@ismaywolff.nl

[push]
  default = current

[pull]
  ff = only

[alias]
  a = add
  aa = add --all
  ai = add --interactive
  b = branch
  bd = branch -d
  bdd = branch -D
  bsup = !git branch --set-upstream-to=origin/$(git rev-parse --abbrev-ref HEAD) $(git rev-parse --abbrev-ref HEAD)
  ca = commit -v --amend
  cb = checkout -b
  cl = clone --recurse-submodules
  clef = clean -fd
  clen = clean -nd
  cm = checkout master
  cmsg = commit -m
  co = checkout
  cof = !git branch | cut -c 3- | fzf --height 40% --reverse | xargs git checkout
  d = diff
  dca = diff --cached
  f = fetch
  l = pull
  lg = log --stat
  p = push
  pf = push --force-with-lease
  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase --interactive
  re = reset
  reh = reset HEAD^
  sba = submodule add
  sbu = submodule update --remote --merge
  sh = show
  st = status
  sta = stash push
  stp = stash pop

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
